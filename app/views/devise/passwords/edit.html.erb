<div class="authbox">
  <h2>Ändra ditt lösenord</h2>

  <%= form_for(resource_name, resource, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= f.error_messages %>
    <%= f.hidden_field :reset_password_token %>

    <p><%= f.label :password, "Lösenord" %></p>
    <p><%= f.password_field :password %></p>

    <p><%= f.label :password_confirmation, "Upprepa lösenord" %></p>
    <p><%= f.password_field :password_confirmation %></p>

    <p><%= f.submit "Ändra mitt lösenord" %></p>
  <% end %>

  <%= render :partial => "devise/shared/links" %>
</div>
