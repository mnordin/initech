<div class="authbox">
  <h2>Har du glömt ditt lösenord?</h2>

  <%= form_for(resource_name, resource, :url => password_path(resource_name)) do |f| %>
    <%= f.error_messages %>

    <p><%= f.label :email, "E-postaddress" %></p>
    <p><%= f.text_field :email %></p>

    <p><%= f.submit "Skicka anvisningar" %></p>
  <% end %>

  <%= render :partial => "devise/shared/links" %>
</div>
