<%= form_for(@survey) do |f| %>
  <% if @survey.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@survey.errors.count, "error") %> prohibited this survey from being saved:</h2>

      <ul>
      <% @survey.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :heading %><br />
    <%= f.text_field :heading %>
  </div>
  <div class="field">
    <%= f.label :send_date %><br />
    <%= f.datetime_select :send_date %>
  </div>
  <div class="field">
    <%= f.label :deadline %><br />
    <%= f.datetime_select :deadline %>
  </div>
	
	<h2>Frågor</h2>

	<% f.fields_for :questions do |question_form| %>
		<%= render :partial => "questions/question_form", :locals => { :question_form => question_form } %>
	<% end %>
	
	<p>Klicka på lägg till för att lägga till en fråga!</p>
	
	<p id="addQuestion">Lägg till fråga</p>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
